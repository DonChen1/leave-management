@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Leave Allocation</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveType)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a asp-action="SetLeave" class="btn btn-outline-success" asp-route-id="@item.Id"><i class="fade fa-pencil"></i>Allocate To Employees</a>
                </td>


            </tr>
        }
    </tbody>
</table>

    
